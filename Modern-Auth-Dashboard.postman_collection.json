        {
          "name": "‚ûï Create New Task",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Extract task ID from response",
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"task_id\", jsonData._id);",
                  "",
                  "// Test response",
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Task created successfully\", function () {",
                  "    pm.expect(jsonData).to.have.property('_id');",
                  "    pm.expect(jsonData.title).to.equal('Complete Project Documentation');",
                  "    pm.expect(jsonData.status).to.equal('todo');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Complete Project Documentation\",\n  \"description\": \"Write comprehensive documentation for the Modern Auth Dashboard project\",\n  \"status\": \"todo\",\n  \"priority\": \"high\",\n  \"dueDate\": \"2024-12-31\",\n  \"tags\": [\"documentation\", \"important\", \"work\"],\n  \"isImportant\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tasks",
              "protocol": "http",
              "host": ["localhost:5000"],
              "port": "5000",
              "path": ["api", "tasks"]
            },
            "description": "Create a new task\n**Requires Authentication**\n\n**Task Schema:**\n- title: string (required)\n- description: string (optional)\n- status: todo, in-progress, completed\n- priority: low, medium, high\n- dueDate: ISO date string (optional)\n- tags: array of strings (optional)\n- isImportant: boolean"
          },
          "response": []
        },
